<Window x:Class="RuckusDiagnosticApp.StartupWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RuckusDiagnosticApp"
        mc:Ignorable="d"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Title="StartupWindow" Height="450" Width="800">
    <Grid>
        <Viewbox Stretch="Uniform">
            <Image Source="Resources/RUCKUS DIAGNOSTICS.jpg" />
        </Viewbox>
        <Button Content="Continue" 
        Width="100" 
        Height="30" 
        HorizontalAlignment="Center" 
        VerticalAlignment="Bottom" 
        Margin="0,0,0,50"
        Click="ContinueButton_Click"/>
        <Button Click="ExitButton_Click" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="10">
            <Button.Content>
                <Image Source="Resources/exit.png" Width="20" Height="20" Stretch="Uniform" />
            </Button.Content>
        </Button>
    </Grid>
</Window>
